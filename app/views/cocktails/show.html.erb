<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://source.unsplash.com/1600x900/?cocktails');">
  <div class="banner-content">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div id="show-flexbox" class="container">
        <!-- insert <div class="card"> -->

  <div class="ingredient-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://source.unsplash.com/1600x900/?cocktails');">

    <h2>Ingredients : </h2>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li> <%= dose.ingredient.name %> (<%= dose.description %>) </li>
      <% end %>
    </ul>
  </div>

  <div id="form">
    <p>Add ingredient</p>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.association :ingredient %>
      <%= f.input :description %>
      <%= f.button :submit %>
    <% end %>
  </div>

    <button class="btn btn-danger"><%= link_to "See all cocktails", cocktails_path %></button>

</div>



