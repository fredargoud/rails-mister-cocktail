<h1><%= @cocktail.name %></h1>

<h2>Ingredients : </h2>
<ul>
  <% @doses.each do |dose| %>
    <li><%= dose.ingredient.name %> (<%= dose.description %>) </li>
  <% end %>
</ul>

<p>Add ingredient</p>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.association :ingredient %>
  <%= f.input :description %>
  <%= f.button :submit %>
<% end %>

